<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:src="@mipmap/ic_person_black_24dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_user_avatar"
        android:phoneNumber="false"
        android:text="Tommy"
        android:textColor="#ff02080a"/>

    <TextView
        android:id="@+id/tv_join_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="56 mins ago >"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_user_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_user_avatar"
        android:text="New Text"
        android:textColor="#ff020a0a" />
</RelativeLayout>
