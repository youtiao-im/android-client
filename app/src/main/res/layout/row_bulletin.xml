<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_creator_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_person_black_24dp"
            android:layout_weight="1"
            android:contentDescription="@string/bulletin_check"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tommy"
            android:id="@+id/tv_user_name"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/iv_creator_avatar"
            android:phoneNumber="false"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_group_name"
            android:layout_toRightOf="@+id/tv_user_name"
            android:layout_margin="5dp"
            android:textColor="#ff104896" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56 mins ago"
            android:id="@+id/tv_created_at"
            android:layout_weight="1"
            android:layout_alignParentRight="false"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/iv_forward" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_forward"
            android:src="@mipmap/ic_feed_forward"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_bulletin_text"
            android:text="There is a new feed"
            android:singleLine="false"
            android:phoneNumber="false" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtn_bulletin_check"
                android:src="@mipmap/check_filled"
                android:adjustViewBounds="false"
                android:longClickable="true"
                android:background="#00000000"
                android:contentDescription="@string/bulletin_check"
                android:focusable="false" />

            <TextView style="@style/bulletin_stamp_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/tv_bulletin_checks_count"
                android:contentDescription="@string/bulletin_check"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtn_bulletin_cross"
                android:src="@mipmap/cross_filled"
                android:adjustViewBounds="false"
                android:longClickable="true"
                android:background="#00000000"
                android:contentDescription="@string/bulletin_cross"
                android:focusable="false" />

            <TextView style="@style/bulletin_stamp_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/tv_bulletin_crosses_count"
                android:contentDescription="@string/bulletin_cross"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtn_bulletin_comment"
                android:src="@mipmap/comment"
                android:adjustViewBounds="false"
                android:longClickable="true"
                android:background="#00000000"
                android:contentDescription="@string/feed_comment"
                android:focusable="false" />

            <TextView style="@style/bulletin_stamp_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/tv_bulletin_comment_count"
                android:contentDescription="@string/feed_comment"
                android:layout_marginLeft="5dp"
                android:textColor="@color/stamp_font_color"
                android:textIsSelectable="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>